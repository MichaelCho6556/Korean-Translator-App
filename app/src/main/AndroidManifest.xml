<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions for microphone access -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    
    <!-- Permissions for network access (for Gemini API and Speech Recognition) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    
    <!-- Permission to wake device for background processing -->
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <!-- Optional: For Firebase Analytics -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    
    <!-- Installation permission removed - unnecessary for translation app -->

    <!-- Declare microphone feature as required -->
    <uses-feature
        android:name="android.hardware.microphone"
        android:required="true" />

    <application
        android:name=".KoreanTranslatorApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@android:drawable/ic_btn_speak_now"
        android:label="@string/app_name"
        android:roundIcon="@android:drawable/ic_btn_speak_now"
        android:supportsRtl="true"
        android:theme="@style/Theme.KoreanTranslator"
        android:networkSecurityConfig="@xml/network_security_config"
        tools:targetApi="31">
        
        <!-- Main Activity -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:theme="@style/Theme.KoreanTranslator"
            android:screenOrientation="portrait"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            
            <!-- Support for voice intents -->
            <intent-filter>
                <action android:name="android.speech.action.RECOGNIZE_SPEECH" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Speech Recognition Service -->
        <service
            android:name=".service.SpeechRecognitionService"
            android:enabled="true"
            android:exported="false" />

        <!-- Translation Service -->
        <service
            android:name=".service.TranslationService"
            android:enabled="true"
            android:exported="false" />

        <!-- ML Kit will initialize automatically -->
        <meta-data
            android:name="com.google.mlkit.vision.DEPENDENCIES"
            android:value="translate" />

    </application>

</manifest>